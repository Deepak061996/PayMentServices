<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="@dimen/_4sdp"
        android:elevation="@dimen/_10sdp"
        android:background="#BCFFFFFF"
        app:cardCornerRadius="@dimen/_5sdp"
        tools:ignore="MissingConstraints">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="MissingConstraints">
            <TextView
                android:id="@+id/tvrs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/_4sdp"
                android:text="\u20B9 399.0"
                android:textSize="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_4sdp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUCCESS"
                android:layout_marginEnd="@dimen/_20sdp"
                app:layout_constraintTop_toTopOf="@id/tvrs"
                app:layout_constraintBottom_toBottomOf="@id/tvrs"
                android:textColor="#300D83"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="@dimen/_20sdp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toBottomOf="@id/tvrs"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginBottom="@dimen/_4sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/_4sdp">
                <ImageView
                    android:id="@+id/imgoperator"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="match_parent"
                    android:background="@drawable/dth"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/_4sdp">
                    <TextView
                        android:id="@+id/tvmobile"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="9004652442"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/black"
                        android:layout_gravity="start"
                        android:textFontWeight="400"/>
                    <TextView
                        android:id="@+id/tvoperator"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Airtel"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/black"
                        android:layout_gravity="start"
                        android:textFontWeight="400"/>
                    <TextView
                        android:id="@+id/dateandtome"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="2020-11-3- 03:35 pm"
                        android:textSize="@dimen/_10sdp"
                        android:gravity="start"
                        android:textColor="@color/black"
                        android:textFontWeight="400"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>